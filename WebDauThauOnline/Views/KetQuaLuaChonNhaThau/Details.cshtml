@model WebDauThauOnline.Models.KetQuaLuaChonNhaThauViewModel

@{
    ViewBag.Title = "Thông tin chi tiết";
}
<style>
    th {
        background-color: #f2f2f2;
        width: 30%;
    }
    table {
        table-layout: fixed;
        border: solid 1px
    }

    .time-container {
        padding: 10px 10px 10px 10px;
        text-align: center;
        background-color: darkblue;
        margin-bottom: 20px;
    }
</style>
<div style="width: 100%; overflow: hidden;">
    <div class="col-sm-3" style=" height: auto; float: left; margin:100px  0 0">
        <div class="time-container">
            <h4 style="color: white; font-weight:bold">Thời điểm đăng tải</h4>
            @if (Model.KetQuaLuaChonNhaThau_ThongTinChiTiet.Ngày_đăng_tải != null)
            {
                <h3 style="color: white; font-weight: bold">@Model.KetQuaLuaChonNhaThau_ThongTinChiTiet.Ngày_đăng_tải.Value.ToString("dd/MM/yyyy HH:mm")</h3>
            }
            else
            {
                <h3 style="color: white; font-weight: bold">NaN</h3>
            }
        </div>
        <div class="time-container" style="background-color:red">
            <h4 style="color: white; font-weight: bold">Thời điểm phê duyệt</h4>
            @if (Model.KetQuaLuaChonNhaThau_ThongTinChiTiet.Ngày_phê_duyệt != null)
            {
                <h3 style="color: white; font-weight: bold">@Model.KetQuaLuaChonNhaThau_ThongTinChiTiet.Ngày_phê_duyệt.Value.ToString("dd/MM/yyyy HH:mm")</h3>
            }
            else
            {
                <h3 style="color: white; font-weight: bold">NaN</h3>
            }
        </div>
        @*        <div class="time-container">
                <h4>Thời điểm đăng tải</h4>
                <h3>@Model.ThongBaoMoiThauModel.Thời_điểm_đăng_tải.Value.ToString("dd/MM/yyyy HH:mm")</h3>
            </div>*@
