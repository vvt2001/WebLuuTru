@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        $('#datepicker').datetimepicker({
            dateFormat: "dd/MM/yyyy",
            timeFormat: "HH:mm"
        });

        function checkSize(input) {
            if (input.files && input.files[0].size > (2 * 1024 * 1024 * 1024)) {
                alert("Kích thước file quá lớn.");
                input.value = null;
            }
        }
    </script>
